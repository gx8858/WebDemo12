  </servlet>
  <servlet>
    <servlet-name>ProvinceServlet</servlet-name>
    <servlet-class>cn.itcast.servlet.ProvinceServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CityServlet</servlet-name>
