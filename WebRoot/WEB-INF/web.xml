    <servlet-name>Ajax3Servlet</servlet-name>
    <url-pattern>/ajax3</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProvinceServlet</servlet-name>
    <url-pattern>/province</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CityServlet</servlet-name>
    <url-pattern>/city</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Ajax5Servlet</servlet-name>
    <url-pattern>/ajax5</url-pattern>
  </servlet-mapping>
